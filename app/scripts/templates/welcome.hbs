<h4>Welcome aboard!</h4>
{{#unless name}}
  <p>Please identify yourself below:</p>
  <p>
      <form role="form">
      <div class="form-group">
        <label class="control-label" for="name-field">Name</label>
        <input id="name-field" name="name" type="text" class="form-control" placeholder="Enter your full name" autofocus required>
      </div>
      <div class="form-group">
        <label class="control-label" for="email-field">Email</span></label>
        <input id="email-field" name="email" type="email" class="form-control" placeholder="Enter your email" required>
      </div>
      <button type="submit" class="btn btn-primary">Start</button>
    </form>
  </p>
{{else}}
  <p>You will participate again as <b>{{name}}</b> (<b>{{email}}</b>).</p>
  <p>
    <a href="/question-1" class="btn btn-primary">Start as {{name}}</a>
    <a href="/" class="btn btn-primary">Change user</a>
  </p>
{{/unless}}